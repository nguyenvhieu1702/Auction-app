<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityLogin1">

    <ImageButton
        android:id="@+id/back_activityLogin1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="351dp"
        android:background="?android:attr/selectableItemBackground"
        android:padding="15dp"
        android:scaleType="centerCrop"
        android:src="@drawable/back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="35dp"
            android:text="Chào mừng trở lại "
            android:textColor="#FA5586"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/gmailEdit"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/shape"
            android:backgroundTint="@color/gray1"
            android:hint="Gmail"
            android:textSize="18dp"
            android:paddingLeft="10dp"
            app:layout_constraintBottom_toTopOf="@+id/passEdit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/passEdit"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/shape"
            android:backgroundTint="@color/gray1"
            android:hint="Mật khẩu"
            android:textSize="18dp"
            android:paddingLeft="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gmailEdit" />

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="290dp"
            android:background="@drawable/bg_shape"
            android:text="Đăng nhập"
            android:textSize="15dp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.555"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/passEdit" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>