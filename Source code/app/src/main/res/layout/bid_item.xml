<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="385dp"
        android:layout_height="80dp"
        android:gravity="center|left"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_bidprice"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/botron_bidtruoc"
            android:gravity="center"
            android:text="150.000 vnd"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="Bởi"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txt_nameCustomer"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:gravity="center|left"
            android:text="Đình Quân"
            android:textSize="15dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_marginTop="6dp"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_timeBidCustomer"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:gravity="center|left"
                android:text="08:00 PM"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/txt_dayBidCustomer"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:gravity="center|left"
                android:textSize="15dp"
                android:text="19/5/2023"/>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>